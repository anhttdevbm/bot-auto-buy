# API Key của 2Captcha - Đăng ký tại https://2captcha.com
TWOCAPTCHA_API_KEY=your_2captcha_api_key_here

# URL Proxy Nhật Bản (định dạng: http://username:password@host:port)
# Ví dụ: http://user:pass@proxy.example.com:8080
PROXY_URL=http://your_proxy_url_here

# Khóa mã hóa session (nên dùng 32 ký tự)
# Có thể tạo bằng lệnh: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_KEY=your_32_character_session_key_here

DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

BOT_ICON_URL=your_bot_icon_url_here

USER_DISCORD_MAPPING_user_example_com=your_user_discord_webhook_url_here

# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_KEY=your-session-encryption-key-change-this

# Database Configuration (SQLite)
DATABASE_PATH=./data/app.db

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Bot Configuration
BOT_HEADLESS=true
BOT_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security Configuration
BCRYPT_ROUNDS=12

# Default Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@autobuybot.com
DEFAULT_ADMIN_PASSWORD=admin123
